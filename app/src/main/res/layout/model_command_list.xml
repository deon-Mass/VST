<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CARD"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font6"
                        android:gravity="start"
                        android:text="Nom du client"
                        android:textColor="@color/dark"
                        android:textSize="17dp"
                        />

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#33000000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font5"
                        android:gravity="start"
                        android:text="etat"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/corner_green_solid_green"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font6"
                        android:gravity="start"
                        android:text="Date"
                        android:textColor="@color/dark"
                        android:textSize="15dp"
                        />

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#33000000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font5"
                        android:gravity="start"
                        android:text="22 08 2020"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/corner_green_solid_green"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font6"
                        android:gravity="start"
                        android:text="Prix du bien"
                        android:textColor="@color/dark"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#33000000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font5"
                        android:gravity="start"
                        android:text="$ 500"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/corner_green_solid_green"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/font6"
                        android:gravity="start"
                        android:text="Client"
                        android:textColor="@color/dark"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#33000000" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font5"
                        android:gravity="start"
                        android:text="Deon massadi"
                        android:paddingHorizontal="20dp"
                        android:background="@drawable/corner_green_solid_green"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:drawableLeft="@drawable/ic_mail_white"
                    android:id="@+id/lire_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font3"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:text="Envoyerun message"
                    android:background="@drawable/corner_dark_solid_dark"
                    android:textColor="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="10dp"
                    android:textSize="12dp"
                    />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>