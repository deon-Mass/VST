<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Views.Paramettres">

    <TextView
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font3"
        android:gravity="start"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:text="Profil"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BCAFAEAE"/>

    <TextView
        android:id="@+id/clearPanier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font3"
        android:gravity="start"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:text="Vider mon panier"
        android:textColor="@color/black"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BCAFAEAE"/>

    <TextView
        android:id="@+id/clearCache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font3"
        android:gravity="start"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:text="Vider les caches"
        android:textColor="@color/black"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BCAFAEAE"/>

    <TextView
        android:id="@+id/contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font3"
        android:gravity="start"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:text="Nous contacter"
        android:textColor="@color/black"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BCAFAEAE"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font3"
        android:gravity="start"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:text="A propos de l'application"
        android:textColor="@color/black"
        android:textSize="20dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:drawablePadding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:fontFamily="@font/font5"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>

    </RelativeLayout>

</LinearLayout>