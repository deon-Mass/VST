<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Views.Blanks.Add_client">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/actor"
                        android:gravity="start"
                        android:text="Information du client"
                        android:textColor="@color/gris_dark"
                        android:textSize="17dp"
                        />
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#5FF4F3F3"/>

                    <EditText
                        android:singleLine="true"
                        android:background="@drawable/corner_bleu_solid_backgroung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginVertical="5dp"
                        android:hint="Nom complet"/>
                    <EditText
                        android:singleLine="true"
                        android:background="@drawable/corner_bleu_solid_backgroung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginVertical="5dp"
                        android:hint="Email"/>
                    <EditText
                        android:singleLine="true"
                        android:background="@drawable/corner_bleu_solid_backgroung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginVertical="5dp"
                        android:drawableRight="@drawable/ic_phone_gris"
                        android:hint="téléphone"/>
                    <EditText
                        android:singleLine="true"
                        android:background="@drawable/corner_bleu_solid_backgroung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginVertical="5dp"
                        android:hint="Ets/Société/Boutique..."/>

                    <LinearLayout
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginRight="5dp"
                            android:background="@drawable/corner_bleu_solid_white"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:entries="@array/data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/corner_bleu_solid_white"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:entries="@array/data2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/actor"
                        android:gravity="start"
                        android:text="Adresse"
                        android:textColor="@color/gris_dark"
                        android:textSize="17dp"
                        />
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#5FF4F3F3"/>

                    <LinearLayout
                        android:layout_marginVertical="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/corner_bleu_solid_backgroung"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:background="@drawable/corner_bleu_solid_backgroung"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:hint="N°, Avenue, Quartier...."/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/corner_bleu_solid_white"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:entries="@array/data3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>