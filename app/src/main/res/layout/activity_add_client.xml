<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Views.Blanks.Add_product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawableLeft="@drawable/ic_commande2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font3"
            android:padding="10dp"
            android:text="Informations de Base"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/nom"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:fontFamily="@font/font3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:background="@drawable/corner_gris_transparent"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/categories"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/corner_gris_transparent"
                android:entries="@array/data3"/>

            <com.google.android.material.textfield.TextInputLayout
                android:hint="Mots cléfs "
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/motcle"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp"
                    android:fontFamily="@font/font3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/corner_gris_transparent"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Quantité"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/qnt"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:fontFamily="@font/font3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="@drawable/corner_gris_transparent"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:drawableLeft="@drawable/ic_commande2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:fontFamily="@font/font3"
                android:padding="10dp"
                android:text="Gallérie"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/BTN_pickpicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font6"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/corner_dark_solid_dark"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:text="Choisir les images"
                android:textSize="13dp" />
            
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/corner_gris_transparent"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/unknow"/>
                <ImageView
                    android:id="@+id/img2"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/unknow"/>
                <ImageView
                    android:id="@+id/img3"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/unknow"/>
                <ImageView
                    android:id="@+id/img4"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/unknow"/>
                <ImageView
                    android:id="@+id/img5"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/unknow"/>

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font3"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_commande2"
            android:text="Détails"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/descripion"
                    android:gravity="top"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:fontFamily="@font/font3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:padding="15dp"
                    android:background="@drawable/corner_gris_transparent"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
                android:layout_marginTop="10dp"
                android:id="@+id/etat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/corner_gris_transparent"
                android:entries="@array/data2"/>


            <com.google.android.material.textfield.TextInputLayout
                android:hint="Téléohone (optionel)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/phone"
                    android:singleLine="true"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:fontFamily="@font/font3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:background="@drawable/corner_gris_transparent"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="Site web (optionel)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/siteweb"
                    android:singleLine="true"
                    android:inputType="textWebEditText"
                    android:textSize="15dp"
                    android:fontFamily="@font/font3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:background="@drawable/corner_gris_transparent"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:hint="E-mail (optionel)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp"
                    android:fontFamily="@font/font3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:background="@drawable/corner_gris_transparent"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font3"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_commande2"
            android:text="Couleurs"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />
        <LinearLayout
            android:background="@drawable/corner_gris_transparent"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/couleur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:entries="@array/data2"/>
                <TextView
                    android:id="@+id/BTN_addColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font6"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/corner_dark_solid_dark"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ajouter"
                    android:textSize="13dp" />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/sous_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:fontFamily="@font/font3"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_commande2"
            android:text="Prix (USD)"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/prix"
                android:singleLine="true"
                android:inputType="number"
                android:textSize="14dp"
                android:fontFamily="@font/font3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/corner_gris_transparent"
                />
        </LinearLayout>

        <TextView
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/BTN_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font6"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/corner_bleu_solid_bleu"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            android:text="Enregistrer"
            android:textSize="13dp" />

    </LinearLayout>

</ScrollView>