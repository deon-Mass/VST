<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/CARD"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_marginVertical="5dp"
                android:id="@+id/index_letter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/back"
                android:textColor="@color/white"/>

            <LinearLayout
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font6"
                    android:gravity="start"
                    android:text="Title of the blog"
                    android:textColor="@color/dark"
                    android:textSize="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font5"
                        android:gravity="start"
                        android:text="22 10 2019"
                        android:textColor="@color/dark"
                        android:textSize="15dp"
                        />

                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:background="#33000000" />
                    <TextView
                        android:id="@+id/categorie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font5"
                        android:gravity="start"
                        android:text="Cat"
                        android:textColor="@color/dark"
                        android:textSize="15dp"
                        />
                </LinearLayout>


                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font3"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@color/dark"
                    android:text="@string/lorem_semin_long"
                    android:textSize="12dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/commentaires"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font5"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:text="1 Commentaires"
                    android:textColor="@color/dark"
                    android:textSize="13dp"
                    />
                <TextView
                    android:id="@+id/lire_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font3"
                    android:gravity="start"
                    android:layout_gravity="end"
                    android:textStyle="bold"
                    android:text="Voir plus"
                    android:background="@drawable/corner_left_radius_orange"
                    android:textColor="@color/white"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="30dp"
                    android:textSize="12dp"
                    />
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>