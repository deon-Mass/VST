<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.About_app">



    <com.flaviofaria.kenburnsview.KenBurnsView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/page"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#6C000000"
        android:gravity="center">

        <ImageView
            android:id="@+id/drawer_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_supreme"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font3"
            android:gravity="start"
            android:text="@string/app_name"
            android:layout_marginTop="-5dp"
            android:textColor="@color/white"
            android:textSize="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:text="@string/lorem_semin_long"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font6"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:text="V 1.0.0"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/back"
        android:drawableLeft="@drawable/ic_arrow_previous_white"
        android:drawablePadding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font6"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:text="Retour"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <TextView
        android:id="@+id/tutorial"
        android:drawableLeft="@drawable/ic_commande"
        android:drawablePadding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font6"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:text="Tutorial"
        android:textColor="@color/white"
        android:textSize="16dp" />
</RelativeLayout>