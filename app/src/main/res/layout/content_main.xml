<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/actor"
                                android:gravity="start"
                                android:textStyle="bold"
                                android:text="Taux du jour"
                                android:textColor="@color/white"
                                android:textSize="17dp"
                                />
                            <TextView
                                android:visibility="gone"
                                android:layout_marginHorizontal="10dp"
                                android:padding="5dp"
                                android:background="@drawable/oval_red"
                                android:gravity="start"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1225"/>

                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/actor"
                            android:gravity="start"
                            android:textStyle="bold"
                            android:text="@string/lorem_short"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            />
                        <TextView
                            android:fontFamily="monospace"
                            android:layout_marginTop="0dp"
                            android:padding="0dp"
                            android:gravity="start"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="1,934"/>


                        <LinearLayout
                            android:layout_marginLeft="1dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_marginVertical="10dp"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_money_white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/CARD_CLIENTS"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/actor"
                                android:gravity="start"
                                android:textStyle="bold"
                                android:text="Les clients"
                                android:textColor="@color/white"
                                android:textSize="17dp"
                                />
                            <TextView
                                android:visibility="gone"
                                android:layout_marginHorizontal="10dp"
                                android:padding="5dp"
                                android:background="@drawable/oval_red"
                                android:gravity="start"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1225"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/actor"
                            android:gravity="start"
                            android:text="8"
                            android:textColor="@color/white"
                            android:textSize="19dp"
                            />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/text"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="100dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Ajouter"/>

                        <LinearLayout
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="100dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_marginVertical="10dp"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_client_white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/actor"
                                android:gravity="start"
                                android:textStyle="bold"
                                android:text="Les produits"
                                android:textColor="@color/white"
                                android:textSize="17dp"
                                />
                            <TextView
                                android:visibility="gone"
                                android:layout_marginHorizontal="10dp"
                                android:padding="5dp"
                                android:background="@drawable/oval_red"
                                android:gravity="start"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1225"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/actor"
                            android:gravity="start"
                            android:textStyle="bold"
                            android:text="15"
                            android:textColor="@color/white"
                            android:textSize="19dp"
                            />
                        <TextView
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:background="@color/white"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:textColor="@color/red"
                            android:layout_width="100dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="Ajouter"/>

                        <LinearLayout
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="170dp"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"
                            android:layout_marginVertical="10dp"/>
                    </LinearLayout>
                    <ImageView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_product_white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <com.anychart.AnyChartView
                    android:backgroundTint="@color/background"
                    android:background="@color/background"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/any_chart_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ProgressBar
                    android:id="@+id/charts_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vendis Sales tracker"/>

    
</RelativeLayout>