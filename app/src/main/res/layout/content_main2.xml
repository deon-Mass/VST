<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="-7dp"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/fond2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="start"
            android:fontFamily="@font/font"
            android:text="Bienvenu (e) chez Suprême shop"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="#DD000000"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp">


                <LinearLayout
                    android:background="@drawable/corner_bleu_solid_white"
                    android:padding="5dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:drawableLeft="@android:drawable/ic_menu_search"
                        android:drawablePadding="10dp"
                        android:background="@color/white"
                        android:id="@+id/SEARCH"
                        android:layout_weight="1"
                        android:hint="Recherche article"
                        android:textColorHint="@color/gris_dark"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/BTN_search"
                        android:layout_weight="4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/font3"
                        android:gravity="center"
                        android:background="@drawable/corner_bleu_solid_bleu"
                        android:text="Go"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:fontFamily="@font/font3"
                    android:gravity="center"
                    android:text="Trouvez rapidement des Vêtements et accéssoires"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_supreme"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_marginTop="-0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/CATEGORIE"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font3"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/corner_green_solid_green"
                android:text="Catégories"
                android:textColor="@color/white"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/login"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font3"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/corner_red_solid_red"
                android:text="Connection"
                android:textColor="@color/white"
                android:textSize="15dp"
                />
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font3"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/corner_bleu_solid_bleu"
                android:text="Contacts"
                android:textColor="@color/white"
                android:textSize="15dp"
                />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:gravity="end"
        android:textSize="14dp"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"/>

</RelativeLayout>
