<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:soundEffectsEnabled="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="6dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="10dp"
                android:background="@drawable/oval_gris"
                android:src="@drawable/ic_wallet"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#CDE6E6E6"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="0dp"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font6"
                    android:gravity="start"
                    android:text="1223 USD"
                    android:textColor="@color/dark"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/state"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font5"
                        android:gravity="start"
                        android:text="Enttente"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        android:layout_width="wrap_content" />
                    <TextView
                        android:id="@+id/descripion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font5"
                        android:gravity="start"
                        android:text="Date : 11 08 2020"
                        android:layout_marginLeft="0dp"
                        android:textColor="@color/dark"
                        android:textSize="12dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>