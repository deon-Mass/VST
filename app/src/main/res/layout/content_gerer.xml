<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageprofil"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/unknow" />
                        <ImageView
                            android:id="@+id/Pickpicture"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/ic_camera" />
                        <ProgressBar
                            android:id="@+id/progressbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="0dp">
                        <TextView
                            android:id="@+id/nom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font5"
                            android:padding="10dp"
                            android:text="MASSADI GEDEON"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp" />
                        <ImageView
                            android:id="@+id/edith_identities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="5"
                            android:padding="10dp"
                            android:src="@drawable/ic_ediit" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font5"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Email"
                            android:textSize="13dp" />
                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font6"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="gedeonmass15@gmail.com"
                            android:textSize="13dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font5"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Telepone"
                            android:textSize="13dp" />
                        <TextView
                            android:id="@+id/telephone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font6"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="1234567890"
                            android:textSize="13dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font5"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Ville"
                            android:textSize="13dp" />
                        <TextView
                            android:id="@+id/ville"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font6"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Kinshasa"
                            android:textSize="13dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font5"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Adresse livraison"
                            android:textSize="13dp" />
                        <TextView
                            android:id="@+id/adressLivraison"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font6"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Kinshasa"
                            android:textSize="13dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font5"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Decrivez ce que vous vendez"
                            android:textSize="13dp" />
                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font6"
                            android:gravity="left"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="Aucune description"
                            android:textSize="13dp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font5"
                            android:padding="10dp"
                            android:text="CHANGER DE MOT DE PASSE"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="Mot de passe actuel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:singleLine="true"
                                android:inputType="textPassword"
                                android:textSize="14dp"
                                android:fontFamily="@font/font3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:background="@drawable/corner_gris_transparent"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="Nouveau mot de passe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:singleLine="true"
                                android:inputType="textPassword"
                                android:textSize="14dp"
                                android:fontFamily="@font/font3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:background="@drawable/corner_gris_transparent"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:hint="Confirmer Mot de passe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:singleLine="true"
                                android:inputType="textPassword"
                                android:textSize="14dp"
                                android:fontFamily="@font/font3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:background="@drawable/corner_gris_transparent"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/font6"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:background="@drawable/corner_bleu_solid_bleu"
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="20dp"
                            android:text="Enregistrer les modifications"
                            android:textSize="13dp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
