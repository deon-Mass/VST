<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/dark2"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/CARD"
        android:elevation="20dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingTop="40dp"
            android:paddingHorizontal="0dp"
            android:id="@+id/index_letter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font3"
            android:gravity="start"
            android:textStyle="bold"
            android:text="PRINCIPAL"
            android:textColor="@color/gris_dark"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#6DAFAEAE"/>
        <TextView
            android:drawableLeft="@drawable/ic_mail_white"
            android:drawablePadding="10dp"
            android:id="@+id/catname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="start"
            android:paddingVertical="10dp"
            android:text="Messages"
            android:textColor="@color/white"
            android:textSize="14dp"
            />

        <TextView
            android:drawableLeft="@drawable/ic_commande"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="start"
            android:paddingVertical="10dp"
            android:text="Commandes"
            android:textColor="@color/white"
            android:textSize="14dp"
            />
        <TextView
            android:drawableLeft="@drawable/ic_wallet"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="start"
            android:paddingVertical="10dp"
            android:text="Portefeuile"
            android:textColor="@color/white"
            android:textSize="14dp"
            />



    </LinearLayout>
    <LinearLayout
        android:elevation="20dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingHorizontal="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font3"
            android:gravity="start"
            android:textStyle="bold"
            android:text="Mes biens"
            android:textColor="@color/gris_dark"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#6DAFAEAE"/>
        <TextView
            android:drawableLeft="@android:drawable/presence_online"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="start"
            android:paddingVertical="10dp"
            android:text="Biens actifs"
            android:textColor="@color/white"
            android:textSize="14dp"
            />

        <TextView
            android:drawableLeft="@drawable/ic_attente"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="start"
            android:paddingVertical="10dp"
            android:text="En attente"
            android:textColor="@color/white"
            android:textSize="14dp"
            />
        <TextView
            android:drawableLeft="@android:drawable/presence_offline"
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="start"
            android:paddingVertical="10dp"
            android:text="Vendu"
            android:textColor="@color/white"
            android:textSize="14dp"
            />
        <TextView
            android:drawableLeft="@drawable/ic_add_white"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font5"
            android:gravity="start"
            android:paddingVertical="10dp"
            android:text="Ajouter un bien "
            android:textColor="@color/white"
            android:textSize="14dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6DAFAEAE"/>
    <TextView
        android:drawableLeft="@drawable/ic_favorite"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font5"
        android:gravity="start"
        android:paddingVertical="10dp"
        android:text="Mes favoris "
        android:textColor="@color/white"
        android:textSize="14dp"
        />
    <TextView
        android:id="@+id/logout"
        android:drawableLeft="@drawable/ic_logout_white"
        android:drawablePadding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font5"
        android:gravity="start"
        android:paddingVertical="10dp"
        android:text="Se dÃ©connecer "
        android:textColor="@color/white"
        android:textSize="14dp"
        />
</LinearLayout>